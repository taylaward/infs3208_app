FROM nginx:latest

COPY nginx.ini /etc/nginx/conf.d/default.conf
COPY fastcgi-php.conf /etc/nginx/snippets/fastcgi-php.conf
COPY php-fpm.conf /etc/nginx/conf.d/php-fpm.conf
COPY www.conf /etc/nginx/conf.d/www.conf

RUN apt-get update && apt-get upgrade -y \
    && apt-get install -y --fix-missing --fix-broken \
    && apt-get install -y nginx
CMD ["nginx", "-g", "daemon off;"]
